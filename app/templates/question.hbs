<ul>
  <li>{{model.author}}</li>
  <li>{{model.askQuestion}}</li>
  <li>{{model.notes}}</li>
</ul>
{{#if model.answers}}
<h3>Answers for this model</h3>
<ul>
  {{#each model.answers as |answer|}}
  <li>{{answer.author}}</li>
  <li>{{answer.answerFor}}</li>
  {{/each}}
</ul>
{{else}}
<h3>no answers</h3>
{{/if}}
{{new-answer saveAnswer="saveAnswer" question=model}}
