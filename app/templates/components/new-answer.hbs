{{#if addNewAnswer}}
  <div>
    <form>
      <div class="form-group">
        <label for="answerFor">Question</label>
        {{input value=answerFor id="answerFor"}}
      </div>
      <div class="form-group">
        <label for="author">Author Name</label>
        {{input value=author id="author"}}
      </div>


      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
